<div class="productName">Name: <%= @product.name %></div>
<p class="productDescription">Description: <%= @product.description %></p>
<p class="productInventory">Inventory: <%= @product.inventory %></p>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next...</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      var results = JSON.parse(data)
      $(".productName").text(results["name"]);
      $(".productDescription").text(results["description"]);
      $(".productInventory").text(results["inventory"]);

      // re-set the id to current on the link
      $(".js-next").attr("data-id", nextId);
    });
  });
});
</script>

